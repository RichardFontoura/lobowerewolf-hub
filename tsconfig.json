{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "fvtt-types"],
    "baseUrl": "./src",
    "paths": {
      "@helpers": ["utils/helpers.ts"],
    }
  },
  "include": ["src/**/*"]
}
